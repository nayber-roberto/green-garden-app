<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="26dp">

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="23dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/button_back" />

    <TextView
        android:id="@+id/textViewRegistrarse"
        android:layout_width="218dp"
        android:layout_height="33dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Ingresar Datos >>"
        android:textAlignment="center"
        android:layout_marginLeft="30dp"
        android:textColor="#264325"
        android:textSize="22sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/editTextKilowatt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="14dp"
        android:hint="Consumo (KLWS)" />

    <EditText
        android:id="@+id/editTextMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mes"
        android:fontFamily="@font/poppins_light"
        android:textSize="14dp"
        android:layout_below="@id/editTextKilowatt" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Precio"
        android:fontFamily="@font/poppins_light"
        android:textSize="14dp"
        android:layout_below="@id/editTextMonth" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:backgroundTint="#264325"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_below="@id/editTextPrice" />


</RelativeLayout>